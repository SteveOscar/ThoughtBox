<div class="container">
  <h3>Create a New Account</h3>
  <%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email  %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign Up", class: "wave-effect waves-light btn" %>
  <% end  %>
</div>
